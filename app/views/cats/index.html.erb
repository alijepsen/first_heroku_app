<h1>All Cats for <%= current_user.full_name %> </h1>
<hr />

<% if @cats.count >= 3 %>
  <h3 class='text-danger'>You're a crazy cat lady!</h3>
<% end %>

  <% if @cats.any? %>
    <% @cats.each do |cat| %>
      <div class='well col-sm-12 col-md-4'>
          <h6 > <%= cat.name %></h6>
          <%= link_to 'Show', cat_path(cat), class: 'btn btn-sm btn-primary' %>
      </div>
    <% end %>
    <% else %>
    <h3>No Cats...please create one!</h3>
  <% end %>
</div>
<hr />
<%= will_paginate @cats %>
<hr />
<%= link_to 'New Cat', new_cat_path, class: 'btn' %>
<%= link_to 'Logout', destroy_user_session_path, method: :delete %>


